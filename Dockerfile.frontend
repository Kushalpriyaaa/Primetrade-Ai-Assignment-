# Dockerfile for Frontend (React + Vite)
FROM node:18-alpine as build

WORKDIR /app

COPY Frontend/assignment/package*.json ./
RUN npm install

COPY Frontend/assignment/ ./
RUN npm run build

# Serve with a lightweight web server
FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
